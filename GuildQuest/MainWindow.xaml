<Window x:Class="GuildQuest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GuildQuest" Height="426" Width="256" ResizeMode="NoResize" MouseLeftButtonDown="Window_MouseLeftButtonDown"  WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="true" Icon="icon_quest_long.ico">
    <Window.Background>
        <ImageBrush ImageSource="back.png" />
    </Window.Background>
<Window.Resources>
        <LinearGradientBrush x:Key="GrayBlueGradientBrush" StartPoint="0,0" EndPoint="1,1"/>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" ClipToBounds="True">
                            <Rectangle x:Name="outerRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="{StaticResource GrayBlueGradientBrush}" Fill="Transparent" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,155,47,0" Name="user" Background="Transparent" TextAlignment="Center" Foreground="White" Visibility="Visible" BorderThickness="0"  VerticalAlignment="Top" Width="162" CaretBrush="White" />
        <PasswordBox Height="23" HorizontalAlignment="Right" KeyDown="pass_KeyDown" HorizontalContentAlignment="Center" Margin="0,201,47,0" Foreground="White" Name="pass" BorderThickness="0" Background="Transparent"  VerticalAlignment="Top" Width="162" />
        <RichTextBox IsReadOnly="True" TextChanged="richTextBox1_TextChanged" Name="richTextBox1" VerticalScrollBarVisibility="Hidden" Margin="37,320,38,40" Background="Transparent" Foreground="White" FontSize="9" BorderThickness="0" />
        <CheckBox Width="24" Height="25" Margin="172,88,38,283" ToolTip="Отображать только активный и предстоящий квесты" Name="checkBox1" IsChecked="True">
            <CheckBox.Template>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="_image" Source="unchecked.png"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="_image" Property="Source" Value="checked.png"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </CheckBox.Template>
        </CheckBox>
        <Button Height="41" Focusable="False" BorderBrush="#00000000" Cursor="Hand" HorizontalAlignment="Left" Click="Button_Click" Margin="29,262,0,0" Name="button" VerticalAlignment="Top" Width="196" Background="#00000000" Foreground="White" BorderThickness="0" />
        <Button Height="12" HorizontalAlignment="Left" Margin="181,393,0,0" VerticalAlignment="Top" Click="button1_Click" Width="42" Focusable="False" BorderBrush="#00000000" Cursor="Hand" Background="#00000000" Foreground="White" BorderThickness="0" />
        <Button Height="12" HorizontalAlignment="Left" Margin="35,393,0,0" VerticalAlignment="Top" Width="42" Focusable="False" Click="ach_Click" BorderBrush="#00000000" Cursor="Hand" Background="#00000000" Foreground="White" BorderThickness="0" />
        <Image Source="archive.png" Width="42" Height="15" Margin="35,373,0,0" Name="arch_over" HorizontalAlignment="Left"/>
        <Image Source="auth.png" Name="login_over" Width="196" Height="42" Margin="29,246,0,106" HorizontalAlignment="Left" Visibility="Collapsed"/>
    </Grid>
</Window>
