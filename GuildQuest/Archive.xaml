<Window x:Class="GuildQuest.Archive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Archive" Height="359" Width="574" MinWidth="574" MinHeight="200"  Icon="icon_quest_long.ico">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button Content="Скопировать" Height="23" HorizontalAlignment="Left" Margin="326,0,0,4" Click="Button_Click" VerticalAlignment="Bottom" Width="96" />
        <Button Content="Сохранить в CSV" Height="23" HorizontalAlignment="Left" Margin="428,0,0,4" Click="Button_Click_1" VerticalAlignment="Bottom" Width="111" />
        <TabControl HorizontalAlignment="Stretch" Margin="0,25,0,30" Name="tabControl1" VerticalAlignment="Stretch">
            <TabItem Header="Квест " IsEnabled="False"/>
            <TabItem Header="Clone" Visibility="Collapsed" IsEnabled="False" Name="Clone" >
                <DataGrid Name="grid" AllowDrop="False" AutoGenerateColumns="False" IsReadOnly="True" CurrentCellChanged="grid_CurrentCellChanged"  HorizontalAlignment="Stretch" ColumnWidth="*" SelectionUnit="CellOrRowHeader"  VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" SelectionMode="Extended">
                    <DataGrid.Columns>
                        <DataGridTextColumn CanUserResize="True" Width="150" IsReadOnly="True" CanUserSort="True" Binding="{Binding Path=Username}" Header="Member"/>
                        <DataGridTextColumn CanUserResize="True" Width="100" IsReadOnly="True" CanUserSort="True" Binding="{Binding Path=Since}" Header="Since"/>
                        <DataGridTextColumn CanUserResize="True" Width="60" IsReadOnly="True" CanUserSort="True" Binding="{Binding Path=Level}" Header="Level"/>
                        <DataGridTextColumn CanUserResize="True" CanUserSort="True" IsReadOnly="True" Binding="{Binding Path=Quest}" Header="Quest"/>
                        <DataGridTextColumn CanUserResize="True" CanUserSort="True" IsReadOnly="True" Binding="{Binding Path=SubQuest}" Header="SubQuest">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="ToolTip" Value="{Binding Path=SbTrans}" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn CanUserResize="True" Width="100"  IsReadOnly="True" CanUserSort="True" Binding="{Binding Path=Status}" Header="Status"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,4,0,0" Text="Дата создания: " VerticalAlignment="Top" Width="97" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="115,4,0,0" Name="crdate" Text="" VerticalAlignment="Top" Width="127" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="314,4,0,0" Name="guid" Text="" VerticalAlignment="Top" Width="226" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="254,4,0,0" Name="page" Text="" VerticalAlignment="Top" Width="53" />
        <Button Content="Удалить" Height="23" HorizontalAlignment="Left" Margin="254,0,0,4" Click="Button_Click_4"  VerticalAlignment="Bottom" Width="66" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="12,0,0,4" Name="comboBox1" VerticalAlignment="Bottom" Width="163" />
    </Grid>
</Window>
